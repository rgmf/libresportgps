<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="es.rgmf.libresportgps.SegmentTrackActivity.PlaceholderFragment">

    <!-- HEADER -->

    <TextView
        android:id="@+id/segment_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_large"
        android:textColor="@color/text_primary"
        android:paddingLeft="10dp"
        android:text="akjdflajfklsda"/>

    <TextView
        android:id="@+id/segment_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_medium"
        android:textColor="@color/text_secondary"
        android:paddingLeft="10dp"
        android:layout_below="@id/segment_name"
        android:text="akjdflajfklsda"/>

    <TextView
        android:id="@+id/segment_elevation_gain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_medium"
        android:textColor="@color/text_secondary"
        android:paddingLeft="10dp"
        android:layout_below="@id/segment_name"
        android:layout_toRightOf="@id/segment_distance"
        android:text="akjdflajfklsda"/>

    <TextView
        android:id="@+id/segment_gradient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_medium"
        android:textColor="@color/text_secondary"
        android:paddingLeft="10dp"
        android:layout_below="@id/segment_name"
        android:layout_toRightOf="@id/segment_elevation_gain"
        android:text="akjdflajfklsda"/>

    <!-- HEADER END -->

    <!-- THE LIST OR MESSAGE WITH EMPTY MESSAGE -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/segment_gradient"
        android:orientation="vertical">

        <TextView
            android:id="@+id/android:empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/no_tracks_to_display" />

        <ListView
            android:id="@+id/android:list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</RelativeLayout>
